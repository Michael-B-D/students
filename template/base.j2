    <body>
        <div >
            <img class="logo" src="https://israelnow.co.il/wp-content/uploads/school-bus-4406479_1920-1.jpg"">
        </div>
        <span><p>Insert student:</p></span>
        <div class="free-search-input">
            <form id="main-free-search" method='POST'>
                <input type="text" id="student_name" name="student_name" placeholder="Enter student name" class="form-control">
                <input type="text" id="student_class" name="student_class" placeholder="Enter student class" class="form-control">
                <input type="text" id="student_profession" name="student_profession" placeholder="Enter student profession" class="form-control">
                <button type="post" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="results">
            <span class="student_name">
                <p>Student name:</p>
                <p>{{student_name}}</p>
            </span>
            <span class="student_class">
                <p>Student class:</p>
                <p>{{student_class}}</p>
            </span>
            <span class="student_profession">
                <p>Student profession:</p>
                <p>{{student_profession}}</p>
            </span>
        </div>
    </body>
